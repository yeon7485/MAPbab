<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center"

            android:src="@drawable/icon_mju_logo"></ImageView>

        <TextView
            android:id="@+id/TextView_widget"
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="MJ 밥 친구"
            android:textColor="#000000"
            android:textSize="25sp"></TextView>
        >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/TextView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_centerVertical="true"
            android:padding="15dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"

            android:text="BHC에서 같이 치킨 드실분 "
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="3명"
            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:textColor="#fff00000"
            android:textSize="25sp"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:padding="20sp"
            android:text="BHC 치킨을 먹고싶은데 혼자서 먹기는 그래서 같이 먹을 사람 3명 구합니다!\n학교 바로 앞이니까 같이 먹고싶은 사람 채팅 걸어주세요 ㅎㅎ"
            android:textColor="#000000"
            android:textSize="23dp"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/TextView_Content_mj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/bin_blue"
        android:gravity="center"
        android:text="장소 : BHC 치킨 명지대점\n 시간 : 18:00 ~ 19: 00"
        android:textColor="#ffffff"
        android:textSize="20sp"></TextView>

    <ImageView
        android:id="@+id/TextView_map_mj"
        android:layout_width="205dp"
        android:layout_height="100dp"
        android:layout_weight="3.5"
        android:src="@drawable/ic_map"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="1">

        <Button
            android:background="@drawable/bin_blue"
            android:text="댓글남기기"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_width="200dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"></Button>

        <Button
            android:layout_width="200dp"
            android:layout_weight="0.5"
            android:background="@drawable/bin_darkblue"
            android:text="채팅 걸기"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_height="match_parent">

        </Button>
    </LinearLayout>

</LinearLayout>

